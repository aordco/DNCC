<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_settle_commission" model="ir.ui.view">
        <field name="name">Settle Commission</field>
        <field name="model">settle.commission</field>
        <field name="arch" type="xml">
            <form string="Settle Commissions">
                <group>
                    <group>
                        <field name="commission_id"/>
                    </group>
                </group>
                <group>
                    <field name="line_ids" readonly="1">
                        <tree>
                            <field name="user_id"/>
                            <field name="total_commission" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="do_create_invoices" string="Create Invoices" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="dncc_sale.action_settle_commission" model="ir.actions.act_window">
        <field name="name">Settle Commissions</field>
        <field name="res_model">settle.commission</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_settle_commission"/>
        <field name="target">new</field>
<!--        <field name="context">{'default_compute_at_date': 0}</field>-->
    </record>
</odoo>

