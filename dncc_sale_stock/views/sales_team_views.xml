<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_team_view_form_inherit_inventory" model="ir.ui.view">
            <field name="name">crm.team.form.inherit.inventory</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='dashboard']" position="after">
                    <page string="Inventory" name="inventory">
                        <group string="Warehouse" name="warehouse">
                            <field name="warehouse_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="location_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="delivery_operation" options="{'no_open':True,'no_create':True}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
